@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>TeamMember</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Garage.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Garage.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CommonID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CommonID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmploymentStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmploymentStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TerminationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TerminationDate.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ParkingStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParkingStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnrollmentDate.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Invoices)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Invoice ID</th>
                    <th>Garage ID</th>
                </tr>
                @foreach (var item in Model.Invoices)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InvoiceID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GarageID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAmountBilled)
                        </td>
                    </tr>
                }
            </table>
