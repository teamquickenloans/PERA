                            <td class="nameColIssueTable">{{issue.name}}</td>
                            <td class="commonIDColIssueTable">{{issue.commonID}}</td>
                            <td class="issueColIssueTable">{{issue.issue}}</td>
                            <td class="dateColIssueTable">{{issue.date | date:'MM/dd/yyyy'}}</td>
